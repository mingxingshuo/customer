<%- include('../layout/header') %>
<div style="text-align: center;margin-bottom: 30px;">
  <a href="/message/" class="button" style="width: 200px;margin: 20px auto;">返回主页</a>
</div>
<form action="/message/create" method="post" enctype="multipart/form-data">
<div class="hang">
	<span>类型  ：</span>
	<select name="type">
		<option value="0">图文消息</option>
		<option value="1">文本消息</option>
	</select>
</div>

<div class="hang">
	<span>图片  ：</span>
	<input name="file" type="file" />
</div>

<div class="hang">
	<span>标题  ：</span>
	<input name="title" type="text" />
</div>

<div class="hang">
	<span>链接  ：</span>
	<input name="url" type="text" />
</div>

<div class="hang">
	<span>详细信息：</span>
	<textarea name="des" style="width: 300px;height: 70px"></textarea>
</div>

<div class="hang">
	<span>公众号 ：</span>
	<% for(var item in codes) {%>
	<div><input type="checkbox" name="codes[]" value="<%= codes[item].code %>"><span><%= codes[item].name %></span></div>
	<%}%>
</div>
<div class="hang">
	<input type="submit" name="submit" text="提交"/>
</div>

</form>
<%- include('../layout/footer') %>